!!! 5
%html
  %head
    %title OpenTracker
    %meta{charset: 'utf-8'}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    = nav_bar brand: 'OpenTracker', brand_link: root_path, responsive: true do
      = menu_group pull: :right do
        - if current_user
          = menu_item current_user.name, user_path(current_user)
          = menu_item 'Log out', destroy_user_session_path, method: :delete
          = menu_item 'sessions', user_race_sessions_path(current_user)
        - else
          = menu_item image_tag('http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_small.png'), user_omniauth_authorize_path(:steam)
    .container
      = bootstrap_flash
      = yield
  %footer
    .container
      .row
        .col-md-2.col-md-offset-8
          %ul.site-footer-links.pull-right
            %li= link_to 'Powered by Steam', ' http://steampowered.com'
        .col-md-2
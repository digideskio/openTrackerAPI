.row.content
  - @race_sessions.each_with_index do |sess, idx|
    .race-session-panel{class: ('even' if idx.even?)}
      %section
        %article
          %aside.race-session-image= link_to image_tag(track_img_path(sess.track)), track_path(sess.track)
          %aside.race-session-info
            %p
              Session:
              %span= link_to sess.track.name, user_race_session_path(@user, sess)
            %p
              Status:
              - if sess.has_ended?
                %span.label.label-default Ended
              - else
                %span.label.label-success Live!
            %p Best lap: #{format_ms sess.fastest_lap.best_lap}
            %p
              Started racing:
              %span= l sess.created_at, format: :default

  .row
    .col-md-4.col-md-offset-4
      = paginate @race_sessions